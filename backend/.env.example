# Copy to .env and fill in values
MONGO_URI=mongodb+srv://<user>:<password>@cluster0.example.mongodb.net/dbname
JWT_SECRET=your_jwt_secret_here
PORT=5000
CLIENT_ORIGIN=http://localhost:5173
# Optional
BCRYPT_SALT_ROUNDS=12
TRUST_PROXY=0
# Redis (optional). If set, caching will use Redis instead of in-memory cache
REDIS_URL=redis://localhost:6379
# Cache TTL for blueprint reads (seconds)
BLUEPRINT_CACHE_TTL=60
# Mongo pool size and retry settings
MONGO_MAX_POOL_SIZE=10
MONGO_CONNECT_RETRIES=5
